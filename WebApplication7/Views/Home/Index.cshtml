
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{   
    <div class="form-group">
        @Html.Label("First Number", new { @class = "control-label" })
        @Html.TextBox("tb1", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Second Number", new { @class = "control-label" })
        @Html.TextBox("tb2", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Result" class="btn btn-primary" />
    </div>
  
    <div class="alert alert-success">
        <p>Result: @ViewData["Result"]</p>
    </div>
}

